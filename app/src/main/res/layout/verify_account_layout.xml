<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_back_ground"
    android:orientation="vertical"
    android:padding="15dp" >

    <com.justsmartapps.myvault.view.FlatTextView
        android:id="@+id/verify_layout_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Verify your identity using recovery email"
        android:textSize="@dimen/textSize_large"
        android:textColor="@android:color/black" />

    <com.justsmartapps.myvault.view.FlatTextView
        android:id="@+id/verify_layout_text_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/verify_layout_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="You will be required to login to your google account"
        android:textColor="@android:color/black" />

    <com.justsmartapps.myvault.view.FlatButton
        android:id="@+id/verify_layout_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:textSize="@dimen/textSize_small"
        android:gravity="center"
        android:text="Cancel" />

    <com.justsmartapps.myvault.view.FlatButton
        android:id="@+id/verify_layout_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSize_small"
        android:layout_above="@+id/verify_layout_cancel"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Continue" />

</RelativeLayout>