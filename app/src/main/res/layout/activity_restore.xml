<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_back_ground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.justsmartapps.myvault.activities.ManageSpaceActivity" >

    <TextView
        android:id="@+id/restore_text"
        android:layout_width="wrap_content"        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="We found your backfile in sdcard, Do you need to restore all the settings like Login credentials and your hidden vault "
        android:textSize="@dimen/textSize_small" />

    <Button
        android:id="@+id/restore_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/restore_text"
        android:layout_below="@+id/restore_text"
        android:layout_marginTop="14dp"
        android:text="Ok" />

    <Button
        android:id="@+id/restore_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/restore_ok"
        android:layout_alignBottom="@+id/restore_ok"
        android:layout_alignRight="@+id/restore_cancel"
        android:layout_marginRight="38dp"
        android:text="cancel" />

</RelativeLayout>